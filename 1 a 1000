# Imprimir todos os números de 1 até 1000
for numero in range(1, 1001):
    print(numero)

# Agora, imprimir apenas os números pares de 1 até 1000
print("\n--- Números Pares ---")  # Apenas para separar visualmente no terminal

for numero in range(1, 1001):
    if numero % 2 == 0:   # Verifica se o número é divisível por 2 (ou seja, é par)
        print(numero)
