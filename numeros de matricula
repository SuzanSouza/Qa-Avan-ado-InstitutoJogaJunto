# Função que verifica se o número é par ou ímpar
def verificar_grupo(matricula):
    if matricula % 2 == 0:
        return "VOCÊ ESTÁ NO TIME AZUL"
    else:
        return "VOCÊ ESTÁ NO TIME AMARELO"


# Lista vazia para armazenar as matrículas
matriculas = []

print("Digite até 5 números de matrícula:")

# Loop para coletar 5 números
while len(matriculas) < 5:
    try:
        numero = int(input(f"Digite o número da matrícula {len(matriculas)+1}: "))
        matriculas.append(numero)
    except ValueError:
        print("Por favor, digite apenas números inteiros.")

print("\n--- Resultado dos grupos ---")

# Laço para verificar o grupo de cada matrícula
for matricula in matriculas:
    resultado = verificar_grupo(matricula)
    print(f"Matrícula {matricula}: {resultado}")
